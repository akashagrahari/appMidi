<% @page_title = "Home" %>
<div class="row">
  <div class="center-block col-md-5" style="float: none">
    <h1 align="center" style="text-decoration: underline">Welcome to New Project App</h1>
    <p align="justify" style="font-size: 25px">
      NewApp is a browser based solution to help you learn piano in a better and faster way.
    </p>
    <p align="justify" style="font-size: 25px">
      NewApp is made on top of open source technologies. It is free and always will be.
    </p>
    <p align="center" style="font-size: 25px">
      Give it a try!
    </p>
  </div>
  <br>
  <div class="center-block col-md-3" style="float: none">
    <%= form_for(:user, :url => {:action => 'login'}, :html => {:class => 'form-signin', :id => 'signin'}) do |f|%>
        <%= f.text_field(:email, :max_length => 100, :placeholder => 'Email', :class => 'form-control') %>
        <%= f.password_field(:password, :placeholder => 'Password', :class => 'form-control') %>
        <br>
        <%= submit_tag('Sign In', :class =>'btn btn-lg btn-primary btn-block') %>
    <% end %>
  </div>
  <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
    Launch demo modal
  </button>

  <!-- Modal -->
  <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title" id="myModalLabel">Modal title</h4>
        </div>
        <div class="modal-body">
          ...
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary">Save changes</button>
        </div>
      </div>
    </div>
  </div>
</div>

